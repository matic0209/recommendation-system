<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Recommendation Daily Report - {{ report.summary.date }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <style>
      body { padding: 24px; background-color: #f6f8fa; }
      .card-metric { min-height: 150px; }
      .delta-positive { color: #198754; }
      .delta-negative { color: #dc3545; }
      .table thead th { background-color: #f0f2f5; }
      .section-title { margin-top: 48px; margin-bottom: 16px; }
      footer { margin-top: 48px; font-size: 0.85rem; color: #6c757d; }
    </style>
  </head>
  <body>
    <header class="mb-4">
      <h1 class="h3">Recommendation Daily Report</h1>
      <p class="text-muted mb-1">
        Date: <strong>{{ report.summary.date }}</strong>
      </p>
      <p class="text-muted">
        Generated at: {{ report.generated_at }}
      </p>
    </header>

    <section>
      <div class="row g-3">
        {% set summary = report.summary %}
        {% set delta_prev = report.deltas.vs_previous_day %}
        {% set delta_7d = report.deltas.vs_7day_avg %}

        {% macro delta_badge(delta) -%}
          {% if delta is none %}
            <span class="badge bg-secondary">n/a</span>
          {% elif delta >= 0 %}
            <span class="badge bg-success">▲ {{ (delta * 100) | round(2) }}%</span>
          {% else %}
            <span class="badge bg-danger">▼ {{ (delta * -100) | round(2) }}%</span>
          {% endif %}
        {%- endmacro %}

        <div class="col-md">
          <div class="card card-metric shadow-sm">
            <div class="card-body">
              <h6 class="card-subtitle text-muted">Total Exposures</h6>
              <h3 class="card-title">
                {{ summary.total_exposures | default(0) | int }}
              </h3>
              <div class="d-flex gap-3">
                <div>Day: {{ delta_badge(delta_prev.total_exposures) }}</div>
                <div>7d avg: {{ delta_badge(delta_7d.total_exposures) }}</div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md">
          <div class="card card-metric shadow-sm">
            <div class="card-body">
              <h6 class="card-subtitle text-muted">Total Clicks</h6>
              <h3 class="card-title">
                {{ summary.total_clicks | default(0) | int }}
              </h3>
              <div class="d-flex gap-3">
                <div>Day: {{ delta_badge(delta_prev.total_clicks) }}</div>
                <div>7d avg: {{ delta_badge(delta_7d.total_clicks) }}</div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md">
          <div class="card card-metric shadow-sm">
            <div class="card-body">
              <h6 class="card-subtitle text-muted">CTR</h6>
              <h3 class="card-title">
                {{ (summary.overall_ctr or 0) * 100 | round(2) }}%
              </h3>
              <div class="d-flex gap-3">
                <div>Day: {{ delta_badge(delta_prev.overall_ctr) }}</div>
                <div>7d avg: {{ delta_badge(delta_7d.overall_ctr) }}</div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md">
          <div class="card card-metric shadow-sm">
            <div class="card-body">
              <h6 class="card-subtitle text-muted">CVR</h6>
              <h3 class="card-title">
                {{ (summary.overall_cvr or 0) * 100 | round(2) }}%
              </h3>
              <div class="d-flex gap-3">
                <div>Day: {{ delta_badge(delta_prev.overall_cvr) }}</div>
                <div>7d avg: {{ delta_badge(delta_7d.overall_cvr) }}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section-title">
      <h2 class="h5">Trend (Last 7 Days)</h2>
      <canvas id="trendChart" height="120"></canvas>
    </section>

    <section class="section-title">
      <h2 class="h5">Breakdowns</h2>
      <div class="row g-4">
        <div class="col-lg-6">
          <div class="card shadow-sm">
            <div class="card-header">By Algorithm Version</div>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                  <thead>
                    <tr>
                      <th>Version</th>
                      <th>Exposures</th>
                      <th>Clicks</th>
                      <th>CTR</th>
                      <th>CVR</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for row in report.breakdowns.by_version %}
                      <tr>
                        <td>{{ row.algorithm_version or "unknown" }}</td>
                        <td>{{ row.exposures | int }}</td>
                        <td>{{ row.clicks | int }}</td>
                        <td>{{ (row.ctr or 0) * 100 | round(2) }}%</td>
                        <td>{{ (row.cvr or 0) * 100 | round(2) }}%</td>
                      </tr>
                    {% else %}
                      <tr><td colspan="5" class="text-center text-muted py-3">No data</td></tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="card shadow-sm">
            <div class="card-header">By Endpoint</div>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                  <thead>
                    <tr>
                      <th>Endpoint</th>
                      <th>Exposures</th>
                      <th>Clicks</th>
                      <th>CTR</th>
                      <th>CVR</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for row in report.breakdowns.by_endpoint %}
                      <tr>
                        <td>{{ row.endpoint or "unknown" }}</td>
                        <td>{{ row.exposures | int }}</td>
                        <td>{{ row.clicks | int }}</td>
                        <td>{{ (row.ctr or 0) * 100 | round(2) }}%</td>
                        <td>{{ (row.cvr or 0) * 100 | round(2) }}%</td>
                      </tr>
                    {% else %}
                      <tr><td colspan="5" class="text-center text-muted py-3">No data</td></tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card shadow-sm mt-4">
        <div class="card-header">By Position</div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
              <thead>
                <tr>
                  <th>Position</th>
                  <th>Exposures</th>
                  <th>Clicks</th>
                  <th>CTR</th>
                </tr>
              </thead>
              <tbody>
                {% for row in report.breakdowns.by_position %}
                  <tr>
                    <td>{{ row.min_position }}</td>
                    <td>{{ row.exposures | int }}</td>
                    <td>{{ row.clicks | int }}</td>
                    <td>{{ (row.ctr or 0) * 100 | round(2) }}%</td>
                  </tr>
                {% else %}
                  <tr><td colspan="4" class="text-center text-muted py-3">No data</td></tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

    <section class="section-title">
      <h2 class="h5">Top Datasets (by clicks)</h2>
      <div class="card shadow-sm">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
              <thead>
                <tr>
                  <th>Dataset ID</th>
                  <th>Exposures</th>
                  <th>Clicks</th>
                  <th>Conversions</th>
                  <th>CTR</th>
                  <th>CVR</th>
                </tr>
              </thead>
              <tbody>
                {% for row in report.breakdowns.top_datasets %}
                  <tr>
                    <td>{{ row.dataset_id }}</td>
                    <td>{{ row.exposures | int }}</td>
                    <td>{{ row.clicks | int }}</td>
                    <td>{{ row.conversions | int }}</td>
                    <td>{{ (row.ctr or 0) * 100 | round(2) }}%</td>
                    <td>{{ (row.cvr or 0) * 100 | round(2) }}%</td>
                  </tr>
                {% else %}
                  <tr><td colspan="6" class="text-center text-muted py-3">No data</td></tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

    <footer>
      <p>
        Report generated automatically by the recommendation monitoring pipeline.
        Data sources: exposure_log.jsonl & Matomo (dimension 2).
      </p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
      (function() {
        const chartCtx = document.getElementById('trendChart');
        if (!chartCtx) return;

        const data = {{ chart_data_json | safe }};
        const labels = data.map(item => item.date);
        const exposures = data.map(item => item.total_exposures || 0);
        const ctr = data.map(item => (item.overall_ctr || 0) * 100);
        const cvr = data.map(item => (item.overall_cvr || 0) * 100);

        new Chart(chartCtx, {
          type: 'line',
          data: {
            labels,
            datasets: [
              {
                label: 'Exposures',
                data: exposures,
                borderColor: '#0d6efd',
                backgroundColor: 'rgba(13, 110, 253, 0.15)',
                yAxisID: 'y',
                tension: 0.2,
                fill: true,
              },
              {
                label: 'CTR (%)',
                data: ctr,
                borderColor: '#198754',
                backgroundColor: 'rgba(25, 135, 84, 0.15)',
                yAxisID: 'y1',
                tension: 0.2,
              },
              {
                label: 'CVR (%)',
                data: cvr,
                borderColor: '#dc3545',
                backgroundColor: 'rgba(220, 53, 69, 0.15)',
                yAxisID: 'y1',
                tension: 0.2,
              },
            ],
          },
          options: {
            responsive: true,
            interaction: {
              mode: 'index',
              intersect: false,
            },
            stacked: false,
            scales: {
              y: {
                type: 'linear',
                position: 'left',
                title: { display: true, text: 'Exposures' },
              },
              y1: {
                type: 'linear',
                position: 'right',
                title: { display: true, text: 'Rate (%)' },
                grid: { drawOnChartArea: false },
              },
            },
          },
        });
      })();
    </script>
  </body>
</html>
